<% if @user %>
<%= "Welcome, #{@user.name}!"  %>
<% end %>

<ul>
  <% @listings.each do |listing| %>
    <li> <%= "title: #{listing.listing_title}, owner: #{listing.listing_owner}, price: £#{listing.listing_price}, description: #{listing.listing_description}, start date: #{listing.listing_start_date}, end date: #{listing.listing_end_date}" %> </li>
    <% if @user %>
    <form action="/requests/<%= listing.listing_id %>" method="post">
      <input type="hidden" name="<%= listing.listing_id %>" value="">
      <input type="submit" value="Request apartment">
    </form>
    <% end %>
    <li> <%= "title: #{listing.listing_title}, owner: #{listing.listing_owner}, price: £#{listing.listing_price}, description: #{listing.listing_description}, start date: #{listing.listing_start_date}, end date: #{listing.listing_end_date}" %> </li>
  <% end %>
</ul>
